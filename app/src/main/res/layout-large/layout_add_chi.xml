<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:weightSum="1"
        android:background="@color/colorPrimary"
        android:layout_weight="0.14">

        <TextView
            android:layout_width="483dp"
            android:layout_height="108dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    Thêm khoản chi"
            android:id="@+id/textView"
            android:verticalScrollbarPosition="right"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="bottom|center"
            android:gravity="center_vertical|fill_vertical"
            android:textSize="55sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"

            android:background="#FF3D00"
            android:gravity="center_vertical|center_horizontal|center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:weightSum="1"
        android:background="#ffffff"
        android:layout_weight="0.09">

        <EditText
            android:layout_width="522dp"
            android:layout_height="87dp"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number"
            android:textSize="45sp" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView4"
            android:gravity="fill_vertical|center_horizontal"
            android:textColor="#1dc707"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:id="@+id/click"
        android:layout_weight="0.13"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_add_image"
            android:id="@+id/btnnhom"
            android:layout_weight="0.25" />

        <TextView
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:hint="   Chọn nhóm"
            android:id="@+id/edittenkhoan"
            android:layout_row="2"
            android:layout_column="9"
            android:gravity="center_vertical"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.14">

        <Button
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/btndate"
            android:background="@drawable/ic_cala" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="464dp"
                android:layout_height="match_parent"
                android:id="@+id/editdate"
                android:hint=" Hôm nay"
                android:layout_weight="0.79"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="35sp" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_weight="0.07">

        <ImageView
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="96dp" >

            <EditText
                android:layout_width="503dp"
                android:layout_height="match_parent"
                android:hint=" Ghi chú..."
                android:id="@+id/editghichu"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#080808"
                android:textSize="35sp" />
        </GridLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:layout_gravity="center_horizontal"
        android:text="Xong"
        android:textColor="#FF3D00"
        android:background="#fefefe"
        android:textStyle="normal"
        android:layout_weight="0.21"
        android:textSize="50sp" />

</LinearLayout>