<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:radius = "5dp"
        android:background="@drawable/selecter0"
        android:layout_weight="0.04">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/ic_khaonthu"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="0dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="0.65">

                <TextView
                    android:layout_width="114dp"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtsotien"
                    android:textSize="30sp"
                    android:gravity="fill_vertical|center_horizontal"
                    android:text="1,000,000"
                    android:textColor="#17be04"
                    android:layout_weight="1.00" />

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:text=".Ä‘"
                    android:id="@+id/textView8"
                    android:textColor="#17be04"
                    android:textSize="30sp"
                    android:gravity="fill_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txttenkhoanthu"
                    android:text="linh luong"
                    android:layout_gravity="top|bottom"
                    android:gravity="fill_vertical|center_horizontal"
                    android:paddingLeft="0dp"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtngaythang"
                    android:text="10/05/2016"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>