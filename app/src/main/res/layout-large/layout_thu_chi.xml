<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="249dp"
            android:weightSum="1">

                <TextView
                    android:text="Sổ giao dịch"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:id="@+id/textView18"
                    android:textSize="45sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/colorPrimary"/>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="725dp"
                android:id="@+id/listView"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/fab_menu"
            android:layout_width="200dp"
            android:layout_height="212dp"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorNormal="@color/blue"
            fab:fab_addButtonColorPressed="#03A9F4"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"

            >

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/blue"
                fab:fab_colorPressed="#03A9F4"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_action_edit_5"
                fab:fab_size="mini"
                fab:fab_title="Thêm khoản thu"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/blue"
                fab:fab_colorPressed="#03A9F4"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_action_edit_5"
                fab:fab_size="mini"
                fab:fab_title="Thêm khoản chi"
                />
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/blue"
                fab:fab_colorPressed="#03A9F4"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_action_edit_5"
                fab:fab_size="mini"
                fab:fab_title="Thêm khoản nợ" />


        </com.getbase.floatingactionbutton.FloatingActionsMenu>


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_chitiet"
            fab:fab_icon="@drawable/ic_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            fab:fab_addButtonColorPressed="@color/colorPrimary"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
          ></com.getbase.floatingactionbutton.FloatingActionButton>
    </FrameLayout>
    </android.support.v4.widget.DrawerLayout>