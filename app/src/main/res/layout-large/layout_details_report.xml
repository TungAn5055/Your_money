<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/textView17"
        android:fontFamily="monospace"
        android:textSize="45sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="BÁO CÁO CHI TIẾT"
        android:gravity="center_vertical" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@drawable/selecter_kqthuchi"
        android:layout_weight="0.19"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_weight="0.39">

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tổng Thu : "
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_weight="0.72"
                android:gravity="left|center" />

            <TextView
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tong thu "
                android:id="@+id/tienthu"
                android:layout_column="1"
                android:textSize="25sp"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:layout_weight="1.08"
                android:gravity="center"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textView13"
                android:layout_row="4"
                android:layout_column="2"
                android:fontFamily="monospace"
                android:textSize="25sp"
                android:layout_weight="0.69"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0.19">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tổng Chi :"
                android:id="@+id/textView9"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_weight="1.32"
                android:gravity="left|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tong chi "
                android:id="@+id/tienchi"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="25sp"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:layout_weight="1.53"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textView12"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="0.20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:id="@+id/textView22"
                android:layout_weight="1.28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/conlai"
                android:layout_row="4"
                android:layout_column="1"
                android:textSize="25sp"
                android:textColor="#f30808"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_weight="0.29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textView11"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="25sp"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:layout_weight="0.40"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="1"
        android:background="@drawable/selecter_kqthuchi"
        android:layout_weight="0.24">

        <TextView
            android:text="Khoản thu lớn  nhất :"
            android:layout_width="match_parent"
            android:id="@+id/txtdatethu"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textColor="#212121"
            android:layout_height="55dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.79">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtmoneythu"
                android:layout_weight="0.34"
                android:gravity="center"
                android:textColor="#f30808"
                android:textSize="25sp"
                android:textAlignment="center" />

            <TextView
                android:text=".đ"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:id="@+id/textView24"
                android:textColor="#f30808"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txttienthumax"
                android:layout_weight="0.75"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#212121" />




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="1"
        android:background="@drawable/selecter_kqthuchi"
        android:layout_weight="0.22">

        <TextView
            android:text="Khoản chi  lớn  nhất :"
            android:layout_width="match_parent"
            android:id="@+id/textView20"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textColor="#212121"
            android:layout_height="55dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtmoneychi"
                android:layout_weight="0.15"
                android:gravity="center"
                android:textColor="#f30808"
                android:textSize="25sp"
                android:textAlignment="center" />

            <TextView
                android:text=".đ"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:id="@+id/textView27"
                android:textColor="#f30808"
                android:textSize="25sp"
                android:textAlignment="center"
                android:gravity="center" />
            <TextView
                android:text="TextView"
                android:layout_width="161dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:layout_weight="0.13"
                android:gravity="center"
                android:textColor="#212121"
                android:id="@+id/txtchimax" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtphandinh"
        android:layout_weight="0.29"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#212121"
        android:layout_marginTop="10dp"
        android:textSize="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="center_horizontal">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_chitiet"
            fab:fab_icon="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorPressed="@color/accent_dark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="true"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorPressed="@color/accent_dark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="true"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            fab:fab_icon="@drawable/icon_home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>

    </GridLayout>
</LinearLayout>