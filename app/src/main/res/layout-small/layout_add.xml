<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thêm khoản thu"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"
            android:background="#FF3D00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:weightSum="1"
        android:background="#ffffff" >

        <EditText
            android:layout_width="255dp"
            android:layout_height="87dp"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:textSize="30dp"
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView3"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="35dp"
            android:textColor="#1dc707" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.05">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:id="@+id/click">

            <Button
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_add_image"
                android:id="@+id/btnnhom"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="  Chọn nhóm"
                android:textSize="30dp"
                android:id="@+id/edittenkhoan"
                android:layout_row="2"
                android:layout_column="9"
                 />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btndate0"
        android:weightSum="1">

        <Button
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:id="@+id/btndate"
            android:background="@drawable/ic_cala"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:id="@+id/editdate"
                android:hint="  Hôm nay"
                android:textSize="30dp"
                android:layout_weight="0.79"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="69dp"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="  Ghi chú..."
                android:textSize="30dp"
                android:id="@+id/editghichu"
                android:layout_row="3"
                android:layout_column="2"
                android:textColor="#080808" />
        </GridLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/btnok"
        android:text="Xong"
        android:textSize="40dp"
        android:textColor="@color/colorPrimary"
        android:background="#fefefe"
        android:textStyle="normal"
        android:layout_weight="0.18" />

</LinearLayout>