<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="268dp"
            android:layout_height="75dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thêm khoản nợ"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:verticalScrollbarPosition="right"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="bottom|center"
            android:gravity="fill_vertical|center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"

            android:background="#FF3D00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:weightSum="1"
        android:background="#ffffff" >

        <EditText
            android:layout_width="264dp"
            android:layout_height="87dp"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:textSize="30dp"
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView5"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="35dp"
            android:textColor="#1dc707" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:weightSum="1"
        android:layout_weight="0.03">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:id="@+id/imageView"
            android:background="@drawable/ic_vay_man"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:hint="Tên người vay..."
                android:textSize="30dp"
                android:id="@+id/editnguoivay"
                android:layout_row="2"
                android:layout_column="9"
                android:autoText="false" />
        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.25">

        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/btndate"
            android:background="@drawable/ic_cala"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="267dp"
                android:layout_height="84dp"
                android:id="@+id/editngaytra"
                android:hint=" Ngày trả"
                android:textSize="30dp"
                android:layout_weight="0.79"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:layout_width="82dp"
            android:layout_height="69dp"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"
            android:layout_gravity="center" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="91dp" >

            <EditText
                android:layout_width="262dp"
                android:layout_height="81dp"
                android:hint="Ghi chú..."
                android:textSize="30dp"
                android:id="@+id/editghichu"
                android:layout_row="3"
                android:layout_column="2"
                android:textColor="#080808" />
        </GridLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:text="Xong"
        android:textSize="40dp"
        android:textColor="#FF3D00"
        android:background="#fbf8f8"
        android:layout_weight="0.48"
        android:textStyle="normal" />

</LinearLayout>