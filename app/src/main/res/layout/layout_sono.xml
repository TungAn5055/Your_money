<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:background="#FF3D00">

        <TextView
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:text="Tổng nợ: "
            android:id="@+id/txttong"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:background="#FF3D00"
            android:textColor="#fefdfd"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1.45" />

        <TextView
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:text=".đ"
            android:id="@+id/textView7"
            android:textSize="30dp"
            android:textColor="#fefefe"
            android:background="#FF3D00"
            android:textStyle="italic"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:id="@+id/listView"
            android:layout_weight="1.25" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_exit"
                    fab:fab_icon="@drawable/ic_action_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    fab:fab_addButtonColorPressed="@color/accent_dark"
                    fab:fab_addButtonPlusIconColor="@color/white"
                    fab:fab_addButtonStrokeVisible="true"
                    fab:fab_labelStyle="@style/menu_labels_style"
                    fab:fab_labelsPosition="left"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>



                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    fab:fab_addButtonColorPressed="@color/accent_dark"
                    fab:fab_addButtonPlusIconColor="@color/white"
                    fab:fab_addButtonStrokeVisible="true"
                    fab:fab_labelStyle="@style/menu_labels_style"
                    fab:fab_labelsPosition="left"
                    fab:fab_icon="@drawable/icon_home"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>