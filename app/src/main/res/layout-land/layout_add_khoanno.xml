<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="443dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thêm khoản nợ"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:verticalScrollbarPosition="right"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="bottom|center"
            android:gravity="fill_vertical|center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"

            android:background="#FF3D00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ffffff" >

        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:textSize="20sp"
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number"
            android:layout_weight="0.96" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView5"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="30sp"
            android:textColor="#1dc707" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:background="@drawable/ic_vay_man"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="262dp"
                android:layout_height="60dp"
                android:hint="Tên người vay..."
                android:textSize="20sp"
                android:id="@+id/editnguoivay"
                android:layout_row="2"
                android:layout_column="9"
                android:autoText="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="0.25">

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndate"
                android:background="@drawable/ic_cala"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editngaytra"
                android:hint=" Ngày trả"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:hint="Ghi chú..."
            android:textSize="20sp"
            android:id="@+id/editghichu"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="#080808"
            android:layout_weight="0.93" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:text="Xong"
        android:textSize="30sp"
        android:textColor="#FF3D00"
        android:background="#fbf8f8"
        android:layout_weight="0.48"
        android:textStyle="normal" />

</LinearLayout>