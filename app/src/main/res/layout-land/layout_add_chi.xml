<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Thêm khoản chi"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:verticalScrollbarPosition="right"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="bottom|center"
            android:gravity="center_vertical|fill_vertical"
            android:layout_weight="0.41"
            android:textAlignment="center" />

        <Button
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"

            android:background="#FF3D00"
            android:gravity="center_vertical|center_horizontal|center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="519dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ffffff" >

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:textSize="20sp"
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number"
            android:layout_weight="0.95" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView4"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="30sp"
            android:textColor="#1dc707" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:id="@+id/click">

            <Button
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_image"
                android:id="@+id/btnnhom" />

            <TextView
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:hint="   Chọn nhóm"
                android:textSize="20sp"
                android:id="@+id/edittenkhoan"
                android:layout_row="2"
                android:layout_column="9"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="0.19">

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndate"
                android:background="@drawable/ic_cala" />

            <EditText
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:id="@+id/editdate"
                android:hint=" Hôm nay"
                android:textSize="20sp"
                android:layout_weight="1"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"
            android:layout_gravity="center"
            android:layout_weight="0.10" />

        <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:hint=" Ghi chú..."
            android:textSize="20sp"
            android:id="@+id/editghichu"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#080808"
            android:layout_weight="0.79" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:layout_gravity="center_horizontal"
        android:text="Xong"
        android:textSize="30sp"
        android:textColor="#FF3D00"
        android:background="#fefefe"
        android:textStyle="normal"
        android:layout_weight="0.43" />

</LinearLayout>