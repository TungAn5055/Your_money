<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.tungan5055.yourmoney.Report.Layout_Baocao"
    android:weightSum="1"

    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.15"
        android:background="@drawable/linebuttom">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99">

            <TextView
                android:text="Tài khoản Vietcombank"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView15"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:textColor="@color/accent_dark"
                 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtsotk"
                android:textSize="18sp"
                android:textColor="#D50000"
                android:textAlignment="viewStart"
                android:gravity="center"
                tools:text="ádsdsds" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="88dp"
            android:layout_height="46dp"
            android:id="@+id/setmon"
            >
            <TextView
                android:text="Tháng: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0.99" />

            <TextView
                android:text="All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.47"
                android:id="@+id/textmon"
                android:fontFamily="monospace"/>
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="1">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="144dp"
            android:layout_height="123dp"
            android:layout_weight="0.97" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:background="@drawable/selecter_kqthuchi"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center">

                <TextView
                    android:layout_width="133dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tổng Thu : "
                    android:id="@+id/textView6"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textSize="18dp"
                    android:fontFamily="monospace"
                    android:layout_weight="0.72"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="tong thu "
                    android:id="@+id/tienthu"
                    android:layout_column="1"
                    android:textSize="15sp"
                    android:foregroundGravity="right"
                    android:layout_gravity="right"
                    android:fontFamily="monospace"
                    android:layout_weight="0.99"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=".đ"
                    android:id="@+id/textView13"
                    android:layout_row="4"
                    android:layout_column="2"
                    android:fontFamily="monospace"
                    android:textSize="15sp"
                    android:layout_weight="1.00"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.73">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Tổng Chi :"
                    android:id="@+id/textView9"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="18dp"
                    android:fontFamily="monospace"
                    android:layout_weight="1.20"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="tong chi "
                    android:id="@+id/tienchi"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="18dp"
                    android:foregroundGravity="right"
                    android:layout_gravity="right"
                    android:fontFamily="monospace"
                    android:layout_weight="1.53"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=".đ"
                    android:id="@+id/textView12"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:layout_weight="1"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:id="@+id/textView22"
                    android:layout_weight="1.53" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/conlai"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:textSize="15sp"
                    android:textColor="#f30808"
                    android:foregroundGravity="right"
                    android:layout_gravity="right"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:layout_weight="0.29" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=".đ"
                    android:id="@+id/textView11"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textSize="15sp"
                    android:fontFamily="monospace"
                    android:textAlignment="textEnd"
                    android:layout_weight="0.26"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_chitiet"
            fab:fab_icon="@drawable/ic_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorPressed="@color/accent_dark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="true"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            fab:fab_addButtonColorPressed="@color/accent_dark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="true"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            fab:fab_icon="@drawable/icon_home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></com.getbase.floatingactionbutton.FloatingActionButton>

    </GridLayout>

</LinearLayout>