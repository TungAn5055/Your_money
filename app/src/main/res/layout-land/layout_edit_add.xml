<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="426dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sửa khoản"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:ems="10"
            android:textColor="#FAFAFA"
            android:textIsSelectable="false"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|fill_vertical" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_delete"
            android:id="@+id/btnexit"
            android:background="#FF3D00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ffffff" >

        <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edittien"
            android:hint=" Nhập vào số tiền..."
            android:gravity="fill_vertical|center_horizontal"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_weight="0.90" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=".đ"
            android:id="@+id/textView3"
            android:gravity="fill_vertical|center_horizontal"
            android:textSize="30sp"
            android:textColor="#1dc707" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="0.05">

            <Button
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:id="@+id/btndate"
                android:background="@drawable/ic_cala" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editdate"
                android:hint="  Hôm nay"
                android:inputType="date"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="0.05">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/click">

                <Button
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_image"
                    android:id="@+id/btnnhom" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:hint="  Chọn nhóm"
                    android:textSize="20sp"
                    android:id="@+id/edittenkhoan"
                    android:layout_row="2"
                    android:layout_column="9"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_ghichu"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Ghi chú..."
            android:textSize="20sp"
            android:id="@+id/editghichu"
            android:layout_row="3"
            android:layout_column="2"
            android:textColor="#080808" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnok"
        android:text="Xong"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:background="#fefefe"
        android:layout_weight="0.76"
        android:textStyle="normal" />

</LinearLayout>