<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <TextView
        android:text="Báo cáo toàn bộ :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textSize="45sp"
        android:fontFamily="monospace"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/linebuttom"
        android:layout_weight="0.08" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_weight="0.36" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/selecter_kqthuchi"
        android:layout_weight="0.30"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_weight="0.32">

            <TextView
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tổng Thu : "
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="38sp"
                android:fontFamily="monospace"
                android:layout_weight="0.72"
                android:gravity="left|center" />

            <TextView
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tong thu "
                android:id="@+id/tienthu"
                android:layout_column="1"
                android:textSize="38sp"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:layout_weight="1.52"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textVie"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="38sp"
                android:fontFamily="monospace"
                android:layout_weight="0.65"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_weight="0.33">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tổng Chi :"
                android:id="@+id/textView9"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="38sp"
                android:fontFamily="monospace"
                android:layout_weight="1.27"
                android:gravity="left|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="tong chi "
                android:id="@+id/tienchi"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="38sp"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:layout_weight="1.49"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textView12"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="38sp"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/textView22"
                android:layout_weight="3.70"
                android:textSize="38sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/conlai"
                android:layout_row="4"
                android:layout_column="1"
                android:textSize="38sp"
                android:textColor="#f30808"
                android:foregroundGravity="right"
                android:layout_gravity="right"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_weight="1.66" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=".đ"
                android:id="@+id/textV"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="38sp"
                android:fontFamily="monospace"
                android:layout_weight="1.32"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="757dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtkq"
        android:textSize="35sp"
        android:fontFamily="monospace"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_weight="0.25" />

</LinearLayout>